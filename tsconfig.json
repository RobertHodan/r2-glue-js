{
  "compilerOptions": {
    "plugins": [
      { "name": "tslint-language-service"}
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist/"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./test/**/*",
    "node_modules",
    "dist",
    "examples"
  ]
}