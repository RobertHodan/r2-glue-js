{
  "name": "r2-glue-js",
  "private": true,
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "jest": "^23.6.0",
    "lerna": "^3.10.5",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.2",
    "rollup": "^1.0.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "node-static": "0.7.11"
  },
  "scripts": {
    "test": "jest --verbose",
    "lint": "tslint --project packages/tsconfig.lint.json --config tslint.json -t stylish",
    "format": "prettier --config .prettierrc --ignore-path .gitignore --write 'packages/**/*.ts'",
    "build": "tsc -b packages",
    "build:rpc": "tsc -b packages/rpc",
    "dist": "rollup -c",
    "publish": "npm run build && lerna publish",
    "serve": "static -a 0.0.0.0 -H '{\"Cache-Control\": \"no-cache, must-revalidate\"}' ."
  }
}
